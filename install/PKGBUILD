pkgname=smarttrafficmeter
pkgver=2.1.1208.6780
pkgrel=1
pkgdesc="Software for measuring network usage"
arch=('i686' 'x86_64' 'arm')
url=""
license=('GPL3')
depends=('boost' 'curl' 'binutils')
makedepends=('gcc' 'git')
checkdepends=()
optdepends=()
provides=('smarttrafficmeter')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=()
validpgpkeys=()
_gitroot="git@bitbucket.org:rafalfr/smarttrafficmeter.git"
_gitname="smarttrafficmeter"

